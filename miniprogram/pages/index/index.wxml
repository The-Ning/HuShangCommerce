<!--pages/index/index.wxml-->
<!-- 搜索框 -->
<van-search
  value="{{ value }}"
  placeholder="请输入搜索关键词"
  show-action
  bind:search="onSearch"
  bind:cancel="onCancel"
/>

<!-- swiper轮播图 -->
<swiper class="swiper-container" indicator-dots indicator-color="white" indicator-active-color="gray" autoplay interval="1800" circular>
  <swiper-item>
    <view class="item">A</view>
  </swiper-item>
  <swiper-item>
    <view class="item">B</view>
  </swiper-item>
  <swiper-item>
    <view class="item">C</view>
  </swiper-item>
</swiper>

<!-- 正方形格子 -->
<van-grid gutter="{{ 10 }}">
  <van-grid-item icon="photo-o" text="文字" wx:for="{{ 8 }}" wx:key="key" />
</van-grid>

<!-- 按钮 -->
<button bindtap="btnHandler" data-step="{{1}}">点击增加消息条数+1</button>
<button bindtap="btnHandler" data-step="{{-1}}">点击增加消息条数-1</button>

