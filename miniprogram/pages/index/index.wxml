<!--pages/index/index.wxml-->
<!-- 搜索框 -->
<van-search
  value="{{ value }}"
  placeholder="请输入搜索关键词"
  show-action
  bind:search="onSearch"
  bind:cancel="onCancel"
/>

<!-- swiper轮播图 -->
<swiper class="swiper-container" indicator-dots indicator-color="white" indicator-active-color="gray" autoplay interval="1800" circular>
  <swiper-item>
    <image src='cloud://one-ev4od.6f6e-one-ev4od-1302814385/imgs/swipers/xcxlog.jpg'></image>
  </swiper-item>
  <swiper-item>
    <view class="item">B</view>
  </swiper-item>
  <swiper-item>
    <view class="item">C</view>
  </swiper-item>
</swiper>

<!-- 正方形格子 -->
<van-grid>
  <van-grid-item icon="photo-o" text="带饭" />
  <van-grid-item icon="photo-o" text="代课" />
  <van-grid-item icon="photo-o" text="取件" />
  <van-grid-item icon="photo-o" text="书籍" />
</van-grid>


<button bindtap="delData">删除数据</button>
<form bindsubmit="btnSubmit">
  <input type="text" name='account' placeholder="Please input account"></input>
  <input type="text" name='password' placeholder="Please input password"></input>
  <button form-type="submit" type='primary'>提交</button>
  <button form-type="reset">重置</button>
</form>
<button bindtap='updateData' type='primary'>修改</button>
