      bindtap="getClotheShop"
  />
  <van-grid-item 
      icon="cloud://one-ev4od.6f6e-one-ev4od-1302814385/imgs/主页分类/美食.png" 
      text="带饭取件"
      link-type="navigateTo"
      url="/pages/shoplist/shoplist?class=shoptablethree&title=带饭取件" 
      bindtap="getItemShop"
  />
  <van-grid-item 
      icon="cloud://one-ev4od.6f6e-one-ev4od-1302814385/imgs/主页分类/其他.png" 
      text="其他服务"
      link-type="navigateTo"
      url="/pages/shoplist/shoplist?class=shoptablefour&title=其他服务" 
      bindtap="getOtherShop"
  />
</van-grid>
<view  class='hs'>校内热点商品</view>

