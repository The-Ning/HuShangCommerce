<!--pages/shoplist/shoplist.wxml-->
<view class="shop-item" wx:for="{{shopList}}" wx:key="id">
    <view class="thumb">
      <image src="{{item.imgsrc}}"></image>
    </view>
    <view class="info">
      <text><text class="tit">名称：</text>{{item.title}}</text>
      <text><text class="tit">clickload：</text>{{item.clickload}}</text>
      <text><text class="tit">价格：</text>{{item.price}}<text class="tit"> 元</text></text>
      <text><text class="tit">用户名：</text>{{item.username}}</text>
    </view>
</view>
