}





#productions{
  width:96%;
  box-sizing: border-box;
  margin-left:2%;
  
}
.production-item{
  border-radius: 10rpx;
  margin-top:10rpx;
  box-shadow: 7rpx 7rpx 5rpx rgb(248, 246, 246);
}