
#page{
  display:flex;
  flex-direction: column;
}

#profile{
  height:700rpx;
}

#avatar{
  width:160rpx;
  height:200rpx;
  position:absolute;
  top:-70rpx;
  left:50rpx;
  padding:0 10rpx 50rpx 10rpx;
}
#nickName{
  width:100%;
  font-weight: 600;
  text-align: center;
  display: inline-block;
  height:50rpx;
  margin-top:20rpx;
  color:rgb(245, 245, 240);
}
#avatarImg{
 
  margin-top:100rpx;
}
.wrap{
  background-color: rgb(49, 47, 47);
  width:100%;
  height:350rpx;
  box-sizing: border-box;
  margin-top:200rpx;
  position: relative;
  z-index: 2;
}
#topbg{
  position: absolute;
  z-index: 0;
  width:100%;
  height:350rpx;
}
#parise{
  position:absolute;
  right:30rpx;
}
#person-footer{
  position:absolute;
  top:200rpx;
  left:70rpx;
  height:200rpx;
  width:85%;
  display:flex;
  flex-direction: column;
  color:white;
  font-size:30rpx;
}
.signature{
  width:100%;
 height:60rpx;
 line-height: 60rpx;
 overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap
}
.specify{
  display:flex;
  height:50rpx;
  width:100%;
}
#gender{
  width:100rpx;
  display:flex;
  padding: 0 10rpx 0 10rpx;
  justify-content: space-around;
  background-color: rgb(75, 73, 75);
}
#gender>image{
  width:50rpx;
  height:40rpx;
}
#gender>text{
 line-height: 50rpx;
}
#location{
  background-color: rgb(75, 73, 75);
  line-height: 50rpx;
  margin-left:10rpx;
  padding: 0 10rpx 0 10rpx;
  max-width: 200rpx;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap
}

#campus{
  background-color: rgb(75, 73, 75);
  line-height: 50rpx;
  margin-left:10rpx;
  padding: 0 10rpx 0 10rpx;
  max-width: 200rpx;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap
}
