
#page{
  display:flex;
  flex-direction: column;
}

#profile{
  height:700rpx;
}

#avatar{
  width:160rpx;
  height:200rpx;
  position:absolute;
  top:-70rpx;
  left:50rpx;
  padding:0 10rpx 50rpx 10rpx;
}
#nickName{
  width:100%;
  font-weight: 600;
  text-align: center;
  display: inline-block;
  height:50rpx;
  margin-top:20rpx;
  color:rgb(245, 245, 240);
}
#avatarImg{
 
  margin-top:100rpx;
}
.wrap{
  background-color: rgb(49, 47, 47);
  width:100%;
  height:500rpx;
  box-sizing: border-box;
  margin-top:280rpx;
  position: relative;
  z-index: 2;
}
#topbg{
  position: absolute;
  z-index: 0;
  width:100%;
  height:350rpx;
}
#parise{
  position:absolute;
  right:30rpx;
}
#person-footer{
  position:absolute;
  bottom:50rpx;
  left:70rpx;
  height:200rpx;
  width:85%;
  display:flex;
  flex-direction: column;
}
.signature{
  width:100%;
 height:60rpx;
 font-size:30rpx;
 color:white;
 line-height: 60rpx;
 overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap
}
.specify{
  display:flex;
  height:50rpx;
  width:100%;
}
#gender{
  width:90rpx;
  display:flex;
  background-color: rgb(75, 73, 75);
}
#gender>image{
  width:50rpx;
  height:40rpx;
}
#gender>text{
  font-size:30rpx;
 line-height: 50rpx;
 color:white;
}

