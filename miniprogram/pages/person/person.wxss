
#page{
  display:flex;
  flex-direction: column;
}

#profile{
  height:550rpx;
  background-color: red;
}

#avatar{
  width:160rpx;
  height:200rpx;
  position:absolute;
  top:-70rpx;
  left:50rpx;
  padding:0 10rpx 50rpx 10rpx;
}
#nickName{
  width:100%;
  font-weight: 600;
  text-align: center;
  display: inline-block;
  height:50rpx;
  margin-top:20rpx;
  color:rgb(245, 245, 240);
}
#avatarImg{
 
  margin-top:100rpx;
}
.wrap{
  background-color: rgb(49, 47, 47);
  width:100%;
  height:350rpx;
  box-sizing: border-box;
  margin-top:200rpx;
  position: relative;
  z-index: 2;
}
#topbg{
  position: absolute;
  z-index: 0;
  width:100%;
  height:350rpx;
}
#parise{
  position:absolute;
  right:30rpx;
}
#person-footer{
  position:absolute;
  top:200rpx;
  left:70rpx;
  height:200rpx;
  width:85%;
  display:flex;
  flex-direction: column;
  color:white;
  font-size:30rpx;
}
.signature{
  width:100%;
 height:60rpx;
 line-height: 60rpx;
 overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap
}

#modifybtn{
  background-color: rgb(75, 73, 75);
  color:white;
  position: absolute;
  width:190rpx;
  height:40rpx;
  font-size:30rpx;
  line-height: 40rpx;
  text-align: center;
  left:220rpx;
  top:128rpx;
}
.specify{
  display:flex;
  height:50rpx;
  width:100%;
}
#gender{
  width:100rpx;
  display:flex;
  padding: 0 10rpx 0 10rpx;
  justify-content: space-around;
  background-color: rgb(75, 73, 75);
}
#gender>image{
  width:50rpx;
  height:40rpx;
}
#gender>text{
 line-height: 50rpx;
}
#location{
  background-color: rgb(75, 73, 75);
  line-height: 50rpx;
  margin-left:10rpx;
  padding: 0 10rpx 0 10rpx;
  max-width: 220rpx;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap
}

#campus{
  background-color: rgb(75, 73, 75);
  line-height: 50rpx;
  margin-left:10rpx;
  padding: 0 10rpx 0 10rpx;
  max-width: 230rpx;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap
}

.production-item{
  background-color: rgb(210, 239, 250);
  border-radius: 10rpx;
  margin-top:10rpx;
  box-shadow: 0 8px 12px #eeeff1;
}




.scroll{
  height: calc(100vh - 550rpx);
  padding:10rpx;
}

.box-0{
  box-sizing: border-box;
 margin-top: 15rpx;
  display:flex;
  flex-direction: column;
  background-color:white;
  box-shadow: 10rpx 10rpx 5rpx rgb(248, 246, 246);
}
.item-header{
 position: relative;
  display:flex;
  padding:15rpx;
}
.delbtn{
  position: absolute;
  right:30rpx;
  top:25rpx;
}
.avatar{
  width:90rpx;
  height:90rpx;
  border-radius: 50%;
  margin-left: 10rpx;
}
.profile{
  height:100%;
  margin-left:15rpx;
  display:flex;
  flex-direction: column;
}
.nickname{
  font: size 40rpx;
  height:40rpx;
  line-height: 40rpx;
 margin-left:30rpx;
 color:	#FF7F50;
 overflow: hidden;
text-overflow: ellipsis;
white-space: nowrap;
}
.item-date{
  font-size:30rpx;
 margin-top: 20rpx;
 margin-left:30rpx;
}
.item-content{
  display:flex;
  flex-direction: column;
  padding:15rpx;
}
.content-text{
  width:100%;
min-height: 35rpx;
 line-height: 1.5;
 font-size:35rpx;
 text-indent: 1em;
}

.content-img{
  width:96%;
  margin-left:2%;
  box-sizing: border-box;
  display:flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}
.content-img:after{
  content:'';
  width:225rpx;
}
.item-img{
  width:225rpx;
  height:225rpx;
  margin-top:10rpx;
}
.item-footer{
  height:60rpx;
  display:flex;
  padding:5px;
  border-top:solid 2rpx #FFF0F5;
  justify-items: center;
}

.item-location{
  width:80%;
  height:45rpx;
  display:flex;
  margin-top:15rpx;
}

.location-img{
  width:50rpx;
  height:45rpx;
}

.location-text{
  line-height: 45rpx;
  font-size:27rpx;
  color:rgb(129, 127, 127);
}

#empty{
  width:100%;
  text-align: center;
  font-size:50rpx;
  position: absolute;
  top:50%;
  font-weight: bold;
  color:rgb(179, 174, 174);
  height:100rpx;
  margin-top:-80rpx;
}

.deadline{
  margin-bottom: 10rpx;
  text-align: center;
  height:50rpx;
  font-size:30rpx;
  line-height: 50rpx;
  color:rgb(13, 191, 245);
}

form{
  width:80%;
  position:fixed;
  top:50%;
  left:50%;
  margin-left:-40%;
  margin-top:-25vh;
  z-index: 1000;
  background-color: ghostwhite;
}

van-field{
  background-color: red;
}
button{
  width:50%;
  float:left;
}