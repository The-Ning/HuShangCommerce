<!--pages/mine/mine.wxml-->
<view id='page'> 
  <view wx:if="{{userInfo.nickName}}" class="user_img_wrap">
     <image class="user_bg" src="https://z3.ax1x.com/2021/05/25/gx6GNV.jpg"></image>
     <view class="user_info">
      <image class="user_icon" src="{{userInfo.avatarUrl}}"></image>
      <view class="user_name">{{userInfo.nickName}}</view>
     </view>
  </view>
  <view wx:else class="user_login">
   <image class="user_bg" src="https://z3.ax1x.com/2021/05/25/gx6GNV.jpg"></image>
     <button bindtap='getUserProfile' class='user_btn'>登录</button>
  </view>
  
  <view id='numdisplay'>
    <view>
      <text style=' font-weight: 1000;font-size:45rpx;'>{{mypublishArr.length}}</text>
    <text>我的发布</text>
  </view>
    <view>
      <text style=' font-weight: 1000;font-size:45rpx;'>{{0}}</text>
    <text>我的收藏</text>
    </view>
    <view>
      <text style=' font-weight: 1000;font-size:45rpx;'>{{myclickload}}</text>
    <text>我的获赞</text>
    </view>
  </view>
  <view class="app_info_wrap">
   <van-cell title="我的发布" is-link icon="orders-o" bind:click='mypublish' class='van-cell'/>
   <van-cell title="那年今日" is-link icon="star-o" bind:click='history' class='van-cell'/>
   <van-cell title="在线客服" is-link icon="friends-o" url='../remark/remark' class='van-cell'/>
   <van-cell title="关于我们" is-link icon="fire-o" url='../author/author' class='van-cell'/>
    
  </view>

</view>

                                                                                                                                                                                                 