<!--pages/mine/mine.wxml-->

  <view wx:if="{{userInfo.nickName}}" class="user_img_wrap">
     <image class="user_bg" src="../../imgs/mine/bg.jpg"></image>
     <view class="user_info">
      <image class="user_icon" src="{{userInfo.avatarUrl}}"></image>
      <view class="user_name">{{userInfo.nickName}}</view>
     </view>
  </view>
  <view wx:else class="user_btn">
     <button bindtap='getUserProfile'>登录</button>
  </view>
  <view class="user_content">
     <view class="user_main">
        <view class="history_wrap">
            <navigator>
               <view class="his_num">0</view>
               <view class="his_name">收藏的文章</view>
            </navigator>
            <navigator>
               <view class="his_num">0</view>
               <view class="his_name">喜欢的人</view>
            </navigator>
            <navigator>
               <view class="his_num">0</view>
               <view class="his_name">关注的人</view>
            </navigator>
            <navigator>
               <view class="his_num">0</view>
               <view class="his_name">我的足迹</view>
            </navigator>
        </view>
     </view>
  </view>
  <view class="app_info_wrap">
     <view class="app_info_item">
        <text>在线客服</text>
        <text class="app_small">遇到问题了？马上联系我~></text>
     </view>
     <view class="app_info_item">
      <text>意见反馈</text>
      <text class="app_small">></text>
     </view>
     <view class="app_info_item">
      <text>关于我们</text>
      <text class="app_small">></text>
   </view>
     <view class="app_info_item">
        <text>设置</text>
      <text class="app_small">></text>
     </view>
  </view>


                                                                                                                                                                                                 