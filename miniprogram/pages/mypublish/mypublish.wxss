.scroll{
  height: 80vh;
}

.box-0{
  width:100%;
 margin-top: 15rpx;
  display:flex;
  flex-direction: column;
  background-color:white;
}
.item-header{
 
  display:flex;
  padding:15rpx;
}
.avatar{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  margin-left: 10rpx;
}
.profile{
  height:100%;
  margin-left:20rpx;
  display:flex;
  flex-direction: column;
}
.nickname{
  font: size 40rpx;
  height:40rpx;
  line-height: 40rpx;
 margin-left:30rpx;
 color:	#FF7F50;
 overflow: hidden;
text-overflow: ellipsis;
white-space: nowrap;
}
.item-date{
  font-size:30rpx;
 margin-top: 20rpx;
 margin-left:30rpx;
}
.item-content{
  display:flex;
  flex-direction: column;
  padding:10rpx;
}
.content-text{
  width:100%;
min-height: 35rpx;
 line-height: 1.5;
 font-size:35rpx;
}

.content-img{
  width:100%;
  display:flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  box-shadow: 10rpx 10rpx 5rpx rgb(248, 246, 246);
}
.content-img:after{
  content:'';
  width:230rpx;
}
.item-img{
  width:230rpx;
  height:225rpx;
  margin-top:10rpx;
}
.item-footer{
  height:60rpx;
  display:flex;
  padding:5px;
  border-top:solid 2rpx #FFF0F5;
  justify-items: center;
}
/* 评论和点赞的样式 */
.item-footer-left{
width:50%;
display:flex;
justify-content: center;
}
.item-footer-right{
width:50%;
display:flex;
justify-content: center;
}
.remark{
  width:70rpx;
  height:60rpx;

}
.remarkload{
  line-height:55rpx;
margin-left:5rpx;
 font-size:40rpx;
}
.like{
  width:60rpx;
  height:50rpx;
  line-height: 60rpx;
}

.clickload1{
  line-height:55rpx;
margin-left:5rpx;
 font-size:40rpx;
}

.delete{
  width:60rpx;
  height:60rpx;
  position: absolute;
  right:20rpx;
  top:40rpx;
}

.item-location{
  width:80%;
  height:45rpx;
  display:flex;
  margin-top:15rpx;
}

.location-img{
  width:50rpx;
  height:45rpx;
}

.location-text{
  line-height: 45rpx;
  font-size:27rpx;
  color:rgb(129, 127, 127);
}