<view id='page'>
  <text class='title'>{{information.title}}</text>
  <view class='item-header'>
    <van-image src='{{information.userInfo.avatarUrl}}'
    fit='cover'
    width='100%'
    height='100%'
    round='true'
    class='avatar' />
    <view class='profile'>
    <text class='nickname'>{{information.userInfo.nickName}}</text>
    <text class='item-date'>{{information.date }}</text>
   </view>
  </view>

  <view class='item-content'>

<text class='content-text'>{{information.content}}</text>

<view class='content-img'>
    <van-image
    wx:for="{{information.imgsrc}}"
     wx:for-item='itemimg'
    wx:key='index'
    width='100%'
    lazy-load
    height='100%'
class='item-img'
catchtap='imgYulan'
data-list='{{information.imgsrc}}'
data-src='{{itemimg}}'
src="{{itemimg}}"
rel="external nofollow"  
fit='cover' 
    />

</view>

<!-- 地址显示区域 -->
<view class='item-location' wx:if="{{information.location}}">
<image src='../../imgs/地址.png' class='location-img'></image>
<text class='location-text'>{{information.location}}</text>
</view>

</view>


<!-- 评论展示区 -->
<view id='remark-box'>
  <scroll-view scroll-y="true">
    <view wx:for="{{information.remarks}}" wx:key='index' class='remark-item'>
    <image src='{{item.avatarUrl}}' class='remark-avatar'></image>
    <text class='remark-lou'>第{{index+1}}楼</text>
    <text class='louzhu' wx:if="{{information.openid == item.openid}}">楼主</text>
<view class='remark-text'>
    <text class='remark-nickName'>{{item.nickName}}</text>
    <text class='remarkTime'>{{item.remarkTime}}</text>
    <text class='remark-content'>{{item.content}}</text>
  </view>
  
</view>
  </scroll-view>
  
</view>

<!-- 评论输入区域 -->
<van-cell-group>
  <van-field
  bind:click-icon='addRemark'
    value="{{ remarkContent }}"
    required
    clearable
    right-icon='/imgs/提交.png'
    type='textarea'
    autoisze
    label="吐槽"
    placeholder="说点什么吧"
    bind:change='remarkContent'
    bind:confirm='addRemark'
  />
  </van-cell-group>
</view>
