
<view class='page'>
<view class='box' wx:if='{{userInfo}}'>
  <scroll-view class='scroll' scroll-y="true">
  <form bindsubmit="formSubmit" bindreset='formReset'>
<input type='text' maxlength="25" placeholder="输入标题(不超过25个字)" maxlength="20" placeholder-style="color:#5F5F5F;font-size:28rpx;" bindinput='limitWord' class='title' name='title'/>
<textarea maxlength='300' placeholder-style="color:#5F5F5F;font-size:28rpx;"  
 bindinput='limitWord' value="{{content}}" placeholder='畅所欲言！' name="content" class='content'>
 <view class="clear1">
       <text style="float: right">{{currentWord}}/{{maxWord}}</text>
</view>
</textarea>
 
<view class='imgs-content'>
  <van-uploader 
      file-list="{{ fileList }}" 
      multiple="true" 
      image-fit ='cover'
      bind:after-read="afterRead"
      bind:oversize='oversize'
      max-count="9"
      class='imgs-item'
      bind:delete="deleteImage"
      max-size='2097152'
      />

  
</view>


<lable style="margin-top:20rpx;margin-left:30rpx;">您想发布到？</lable>
<radio-group name='category'>
  <radio value='love' checked="true">表白捞人</radio>
  <radio value='findItem'>失物招领</radio>
  <radio value='campus'>校园趣事</radio>
</radio-group>
<van-cell center title="{{location||'位置'}}">
  <switch  slot="right-icon" size="24" checked="{{checked}}" bindchange="onInputLocation"/>
</van-cell>

<van-cell center title="匿名（隐藏昵称和头像）">
  <switch  slot="right-icon" size="24" checked="{{private}}" bindchange="onInputPrivate"/>
</van-cell>
  <button formType="submit" type='primary'>提交</button>
  </form> 
</scroll-view>
</view>

<view class='tologin' wx:else >
  <van-button  type="warning" size='normal' color='red' bindtap='tologin'>未登录</van-button> 
</view>


</view>


